<?xml version="1.0" encoding="UTF-8"?>
<Statecharts:StateMachine xmi:version="2.0" xmlns:xmi="http://www.omg.org/XMI" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:Statecharts="http://statechart" basePeriod="1ms">
  <transitions source="//@states.2" destination="//@states.2" transitionInfo="wait(100ms) / PORTA++"/>
  <transitions source="//@states.2" destination="//@states.1" transitionInfo="startstop_pressed"/>
  <transitions source="//@states.1" destination="//@states.2" transitionInfo="startstop_pressed"/>
  <transitions source="//@states.1" destination="//@states.1" transitionInfo="reset / PORTA = 0"/>
  <transitions source="//@states.2" destination="//@states.1" transitionInfo="[PORTA >= 128]"/>
  <transitions source="//@states.0" destination="//@states.1" transitionInfo="/ PORTA = 0" priority="1"/>
  <states xsi:type="Statecharts:InitialState" outgoingTransitions="//@transitions.5"/>
  <states xsi:type="Statecharts:NormalState" incomingTransitions="//@transitions.1 //@transitions.3 //@transitions.4 //@transitions.5" outgoingTransitions="//@transitions.2 //@transitions.3" actions="ENTER/DDRB = 0xff ### ENTER/PORTB++ ### ALWAYS/wdt_reset()" name="stopped"/>
  <states xsi:type="Statecharts:NormalState" incomingTransitions="//@transitions.0 //@transitions.2" outgoingTransitions="//@transitions.0 //@transitions.1 //@transitions.4" actions="ALWAYS/wdt_reset() ### ENTER/DDRA = 0xff ### EXIT/DDRA = 0x00" name="running"/>
  <globalCodeBoxes name="includes" code="#include &lt;avr/io.h>####include &lt;avr/wdt.h>"/>
</Statecharts:StateMachine>
